<% include partials/header %>

<h1>
  <% if (pokemon.length > 0) { %>
  <%=  pokemon[0].type.charAt(0).toUpperCase() + pokemon[0].type.slice(1) %>
  <% } else { %>
    No pokemon of this type yet!
  <% } %>
</h1>
<br/>
<% pokemon.forEach(function (pokemon){ %>
  <div>
    <h4><a href="/pokedex/<%= pokemon.id %>" alt="<%= pokemon.name %>"><%= pokemon.name %></a></h4>
    <img src="<%= pokemon.image %>" alt="<%= pokemon.name %>">
    <p> <%= pokemon.description %></p>
    <hr>
  </div>
<% }) %>

<% include partials/footer %>