<% include partials/header %>

<div class="container">
  <form action="/pokedex" method="post">
    <div class="form-group">
      <label for="name">Pokémon name:</label>
      <input type="text" class="form-control" placeholder="name" name="pokemon[name]">
    </div>
    <div class="form-group">
      <label for="type">Pokémon type:</label>
      <input type="text" class="form-control" placeholder="type" name="pokemon[type]">
    </div>
    <div class="form-group">
      <label for="name">Pokémon image url:</label>
      <input type="text" class="form-control" placeholder="image" name="pokemon[image]">
    </div>
    <div class="form-group">
      <label for="description">Pokémon description:</label>
      <input type="text" class="form-control" placeholder="description" name="pokemon[description]">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>


